{
  "python.testing.unittestArgs": ["-v", "-s", "./source", "-p", "*_test.py"],
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8",
    "editor.formatOnSave": true
  },
  "python.testing.pytestEnabled": false,
  "python.testing.unittestEnabled": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.cache": true,
    "**/.dotnet": true,
    "**/.gnupg": true,
    "**/.pytest_cache": true,
    "**/.ssh": true
  },
  "git.ignoreLimitWarning": true
}
